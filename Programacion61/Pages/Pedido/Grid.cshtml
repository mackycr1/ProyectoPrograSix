@page
@model Programacion61.Pages.Pedido.GridModel
@{
    ViewData["Title"] = "Pedidos";
}
<div class="container-fluid">
    <div class="card">
        <br />
        <div class="card-header">Pedido</div>
        <div class="card-body">

            @*@Add Button@*@
            <a class="btn btn-primary" asp-page="Edit">
                <i class="bx bxs-add-to-queue"></i>
            </a>

            <div class="row">
                <div class="col-12">
                    <table id="GridView" class="table table-bordered table table-stripped table table-hover">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Cliente</th>
                                <th>Nu. Telefono Cliente </th>
                                <th>Codigo</th>
                                <th>Fecha</th>
                                <th>Cantidad</th>
                                <th>Precio Unitario</th>
                                <th>Envio</th>
                                <th>SubTotal</th>
                                <th>IVA</th>
                                <th>Total</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.GridList)
                            {
                            <tr>
                                <td>@item.IdPedido</td>
                                <td>@(item.Cliente.NombreCliente + " " + item.Cliente.PrimerApellidoCliente + " " + item.Cliente.SegundoApellidoCliente)</td>
                                <td>@item.Cliente.TelefonoCliente</td>
                                <td>@item.Codigo</td>
                                <td>@item.Fecha.ToString("dd/MM/yyyy")</td>
                                <td>@item.Cantidad</td>
                                <td>@item.PrecioUnitario</td>
                                <td>@item.Envio</td>
                                <td>@item.SubTotal</td>
                                <td>@item.IVA</td>
                                <td>@item.Total</td>
                                <td>
                                    @*@Edit Button@*@
                                    <a class="btn btn-primary" asp-page="Edit" asp-route-id="@item.IdPedido">
                                        <i class="bx bx-edit-alt"></i>
                                    </a>

                                    @*@Delete Button@*@
                                    <button type="button" class="btn btn-danger" onclick="PedidoGrid.OnClickDelete(@item.IdPedido)">
                                        <i class="bx bx-trash"></i>
                                    </button>
                                </td>
                            </tr>}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script defer src="~/App/Pedido/Grid.js"></script>
}