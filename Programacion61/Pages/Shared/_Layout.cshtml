<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <title>@ViewData["Title"] - Programacion61</title>
    @await Html.PartialAsync("_HeaderPartial");

</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Proyecto Final</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    
                    @*Home*@
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page"  asp-page="~/Index">Inicio</a>
                    </li>

                    @*Clientes*@
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" asp-page="/Cliente/Grid">Clientes</a>
                    </li>

                    @*Categorias*@
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" asp-page="/Categoria/Grid">Categorias</a>
                    </li>

                    @*Productos*@
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" asp-page="/Producto/Grid">Productos</a>
                    </li>

                    @*Pedidos*@
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" asp-page="/Pedido/Grid">Pedidos</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    @RenderBody()


    @await Html.PartialAsync("_ScriptsPartial");
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
