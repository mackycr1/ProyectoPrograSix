@page
@model Programacion61.Pages.Usuario.CambioClaveModel
@{

}

<div id="AppEdit" class="container" data-entity="@JsonSerializer.Serialize(Model.Entity)" v-cloak>
    <div class="card">
        <div class="card-header">
            Cambio de Contraseña
        </div>
        <div class="card-body">
            <form id="FormEdit" method="post">

                <input type="hidden" asp-for="Entity.Usuario" v-model="Entity.Usuario" />

                <div class="form-group mb-3">
                    <label for="Entity.Clave" class="form-label">Nueva Contraseña</label>
                    <input type="password" class="form-control" asp-for="Entity.Clave" v-model="Entity.Clave" maxlength="15" required>
                </div>

                <div class="form-group mb-3">
                    <label for="SegundaClave" class="form-label">Repetir Contraseña</label>
                    <input type="password" class="form-control" asp-for="SegundaClave" v-model="SegundaClave" maxlength="15" required>
                </div>

                <div class="row">
                    <div class="col-4">
                        <button type="button" @@click="Save" class="btn btn-primary">
                            Cambiar
                        </button>
                    </div>

                </div>

            </form>

        </div>
    </div>

</div>

@section Scripts
{
    <script defer src="~/App/Usuario/CambiarClave.js"></script>
}