@page
@model Programacion61.Pages.Producto.GridModel
@{
    ViewData["Title"] = "Producto";
}

<div class="container-fluid">
    <div class="card">
        <br />
        <div class="card-header">Producto</div>
        <div class="card-body">

            @*Add Button*@
            <a class="btn btn-primary" asp-page="Edit">
                <i class="bx bxs-add-to-queue"></i>
            </a>

            <div class="row">
                <div class="col-12">
                    <table id="GridView" class="table table-bordered table table-stripped table table-hover">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Categoria</th>
                                <th>Nombre</th>
                                <th>Cantidad</th>
                                <th>Caracteristicas</th>
                                <th>Precio</th>
                                <th>Estado</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.GridList)
                            {
                            <tr>
                                <td>@item.IdProducto</td>
                                <td>@item.Categoria.NombreCategoria</td>
                                <td>@item.Nombre</td>
                                <td>@item.Cantidad</td>
                                <td>@item.Caracteristicas</td>
                                <td>@item.Precio</td>
                                <td>@(item.Estado?"Activo":"Inactivo")</td>
                                <td>
                                    @*Edit Button*@
                                    <a class="btn btn-primary" asp-page="Edit" asp-route-id="@item.IdProducto">
                                        <i class="bx bx-edit-alt"></i>
                                    </a>

                                    @*Delete Button*@
                                    <button type="button" class="btn btn-danger" onclick="ProductoGrid.OnClickDelete(@item.IdProducto)">
                                        <i class="bx bx-trash"></i>
                                    </button>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script defer src="~/App/Producto/Grid.js"></script>
}